#!/bin/bash

USER=`whoami`
WORKING_DIR=`pwd`
HOST=`hostname`

mkdir -p logs/${USER}

printf "${USER}@${HOST}:${PWD}$ " ;

while IFS= read -r CMD; do
    
    if [[ "$CMD" == *"cd"* ]]; then
        $CMD
    else

       /usr/bin/time -o tmp.log -f 'SU' -p $CMD
       TIME=`cat tmp.log`

       printf "${CMD} \n ${TIME} \n---\n" >> logs/${USER}/$(date +"%b-%Y").log
       rm tmp.log
    fi

    printf "${USER}@${HOST}:${PWD}$ " ;

done
printf "\n";

